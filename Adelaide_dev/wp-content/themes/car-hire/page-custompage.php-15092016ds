<?php
/*
 * Template Name: Custom Page
 * Description: Page template without sidebar
 */
get_header();
?>
<section id="Fleet">
  <div class="container">
    <div class="fleet-container1">
      <h3 class="inner_header"><?php echo get_the_title();?></h3>
    </div>
    <?php 
 $args = array(
	'sort_order' => 'asc',
	'sort_column' => 'menu_order',
	'hierarchical' => 1,
	'exclude' => '',
	'include' => '',
	'meta_key' => '',
	'meta_value' => '',
	'authors' => '',
	'child_of' => 54,
	'parent' => 54,
	'exclude_tree' => '',
	'number' => '',
	'offset' => 0,
	'post_type' => 'page',
	'post_status' => 'publish'
);
$mypages = get_pages($args);
$ds=2;
$tono = count($mypages)+1;
		foreach( $mypages as $page ) {
		$content = $page->post_content;
		$url = wp_get_attachment_url( get_post_thumbnail_id($page->ID) );
		if($ds%2==0){
			$css = 'odd_row';
			}else{
				$css = 'even_row';
				}
        ?>
         <div class="row <?php echo $css;?> clearfix">
      <div class="fleet-img-inner"> 
       <img src="<?php echo $url;?>" alt="#"/> 
      </div>
      <div class="fleet-content-inner">
        <h4><?php echo get_the_title($page->ID);?></h4>
        <p><?php echo $content;?></p>
      </div>
    </div>
    <?php
    if($tono!=$ds){
	?>
    <div class="inner_border"><?php //echo $tono.'===>'.$ds;?></div>
        <?php
		}
		$ds++;
		}
		?>
  </div>
</section>
<?php get_footer(); ?>