.container {
	width: 85%
}
}

@media (max-width:768px) {
.container {
	width: 85%;
}
.logo a{
	width: 20%;
}
.menu{
	display: none;
}
.responsiveMenu{
	display: block;
}
.fixedChat{
	display: block;
}
.chatLink{
	display: none;
}
.fleet-container1 .fleet-img{
	width: 100%;
}
.fleet-container1 .fleet-content{
	width: 100%;	
}
.fleet-container2 .fleet-img{
	width: 100%;
}
.fleet-container2 .fleet-img img{
	width: 100%;
}
.fleet-container2 .fleet-content{
	width: 100%;	
}
.fleet-container2 .fleet-content h4, p{
	text-align: left !important;
}
#navbtns .previous{
	right: -20px;
	z-index: 1;
}
#navbtns .next{
	left: -15px;
	z-index: 1;
}
#car-book .full-form{
	width: 100%;
}
.joinus-form{
	width: 100%;
}
.joinus-left{
	width: 50%;
}
.joinus-form textarea{
	height: 70px;
}
.inputFields{
	padding:10px;
}
.textSection {    
    padding: 0 30px;
    padding-top: 20%;
}
.textSection h2 {
    font-weight: bold;
    font-size: 30px;
    text-align: right;
    line-height: 30px;
}
.textSection p{
	text-align: right !important;
} 
.footerPayment{
	width: 80%;
	float: right;
	text-align: right;
}
.footerPayment h4{
	text-align: right;
}
.topfooter{
	padding: 40px 0;
}
.footerLogo{
	padding-top: 15%;
}
.bottomfooter p{
	text-align: center !important;
}












